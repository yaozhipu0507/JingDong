<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="quanju" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--登录注册-->
    <style name="dengluzhucelogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">#ff5001</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="dengluzhuceBaizi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="dengluzhuceEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="dengluzhuceText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#1c55c7</item>
        <item name="android:textSize">20dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!--我的-->
    <style name="wodeText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">80dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
